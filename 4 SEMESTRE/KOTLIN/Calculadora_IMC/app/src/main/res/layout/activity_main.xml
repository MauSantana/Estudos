<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
        O atributo orientation = vertical permite que
        nosso layout disponha os elementos dentro dele
        um abaixo do outro (em forma de colunas);
        O atributo padding é o mesmo que já conhecemos
        do HTML/CSS;
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Calculadora IMC"
            android:textSize="24sp" />

        <!--
            Dentro de um LinearLayout podemos utilizar a
            propriedade margin, assim como no HTML/CSS
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!--
                O componente EditText cria um campo para
                que possamos inserir valores nele -> é
                igual à TAG <input> do HTML.
            -->

            <EditText
                android:id="@+id/etNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nome" />

            <!--
                O atributo layout_weight permite que controlemos
                a "força" daquele elemento dentro do LinearLayout,
                ou seja, quanto maior seu número, maior seu tamanho
                em comparação aos outros;
                Funciona tanto na horizontal quanto na vertical,
                dependendo da orientation da LinearLayout;
                Para conseguir isso, devemos utilizar 0dp na width
                ou na height.
            -->
            <EditText
                android:id="@+id/etIdade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Idade"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!--
                O atributo inputType permite que o nosso campo
                se comporte de maneira diferente, conforme a
                necessidade;
                Nesse caso por exemplo, o inputType number fará
                com que o teclado aberto ao clicar no campo seja
                o númerico.
            -->
            <EditText
                android:id="@+id/etAltura"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Altura (em cm)"
                android:inputType="number" />

            <EditText
                android:id="@+id/etPeso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Peso (em kg)"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="calcular"
            android:text="Calcular"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvFaixaEtaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>