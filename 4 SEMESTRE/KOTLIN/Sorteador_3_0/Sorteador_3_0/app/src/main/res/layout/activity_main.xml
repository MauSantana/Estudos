<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Sorteador 3.0"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carteira" />
                <TextView
                    android:id="@+id/tv_carteira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_green"
                    android:text="120,00" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_palpite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Palpite"
                android:inputType="number"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_valor_aposta"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="Valor da aposta"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/sw_parar"
                android:text="Parar ao zerar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_all_in"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="All in"
                android:backgroundTint="@color/primary_yellow"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                android:onClick="apostar"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_apostar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Apostar"
                android:onClick="apostar"
                android:textAllCaps="false"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_dado"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                />
            <TextView
                android:id="@+id/tv_resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:text="Parabéns você acertou +20"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>